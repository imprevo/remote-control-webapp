{
  "name": "remote-control-webapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "DEBUG=remote-control* nodemon -e js,json,hbs ./src",
    "format": "prettier --loglevel warn --write \"**/*.{js,css,md}\"",
    "lint": "eslint . --cache --fix"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,json}": "prettier --write",
    "*.js": "eslint --cache --fix"
  }
}
